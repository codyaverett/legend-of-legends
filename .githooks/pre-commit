#!/bin/sh

# Pre-commit hook for Legends of Legend
# Runs formatting, linting, and tests before allowing a commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if we're in the right directory
if [ ! -f "Cargo.toml" ]; then
    echo "âŒ Error: Cargo.toml not found. Are you in the project root?"
    exit 1
fi

# Format check
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt -- --check; then
    echo "âŒ Code formatting issues detected!"
    echo "ğŸ’¡ Run 'make fmt' or 'cargo fmt' to fix formatting"
    exit 1
fi
echo "âœ… Formatting check passed"

# Clippy linting
echo "ğŸ” Running Clippy linter..."
if ! cargo clippy -- -D warnings; then
    echo "âŒ Clippy found issues!"
    echo "ğŸ’¡ Run 'make lint-fix' or fix the issues manually"
    exit 1
fi
echo "âœ… Linting passed"

# Run tests
echo "ğŸ§ª Running tests..."
if ! cargo test --quiet; then
    echo "âŒ Tests failed!"
    echo "ğŸ’¡ Fix the failing tests before committing"
    exit 1
fi
echo "âœ… Tests passed"

# Check for compilation errors
echo "ğŸ”¨ Checking for compilation errors..."
if ! cargo check --quiet; then
    echo "âŒ Compilation errors detected!"
    exit 1
fi
echo "âœ… Compilation check passed"

echo "âœ¨ All pre-commit checks passed! Proceeding with commit..."